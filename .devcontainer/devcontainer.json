{
  "name": "Ubuntu 20.04 Development Environment",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-20.04",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "editor.formatOnSave": true,
    "files.autoSave": "afterDelay"
  },
  "extensions": [
    "ms-vscode.cpptools",
    "ms-python.python",
    "esbenp.prettier-vscode",
    "dbaeumer.vscode-eslint"
  ],
  "forwardPorts": [3000, 8000],
  "postCreateCommand": "bash panug/.setup.sh && pyenv install 3.9 && pyenv global 3.9 && python -m venv panug && .panug/bin/activate && pip install -r requirements.txt",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "mounts": [
    "source=/path/to/local/dir,target=/workspace,type=bind"
  ]
}
